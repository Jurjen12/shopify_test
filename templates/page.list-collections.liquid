<div class="container">
  <div class="row">
    <div class="col-12">
      {% include 'breadcrumbs' %}
      <div class="title-box">
          <h1>{{ page.title }}</h1>
      </div>
    </div>
  </div>
  <div class="row">
  {% for link in linklists[page.title].links  %}
    {% if link.type == 'collection_link' %}
      {% assign collection = link.object %}
      <div class="col-lg-4 col-md-4 col-12 mb-5">
        <a href="{{ collection.url }}">
          <img src="{{ collection.image | image_url: width: 450, height: 450 | image_tag: collection.image.alt }}"class="img-fluid"/>
          <span class="pt-4">{{ collection.title }}<small><i class="fa fa-chevron-right text-sm pl-2"></i></small></span>
        </a>
      </div>
      {% endif %}
  {%  endfor %}
  </div>
</div>