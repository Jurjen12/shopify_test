<div class="container">
  <div class="service-banner bg-primary py-2 px-4 my-3 d-flex align-items-center justify-content-between ">
    <div class="title title-font text-white h5 mb-0"><span>{{ section.settings.promotion_text }}</span></div>
    {% if section.settings.promotion_btn_url != blank %}
    <a href="{{ section.settings.promotion_btn_url }}" title="" class="btn btn-icon btn-{% if settings.show_btn_gradient %}gradient-{% endif %}secondary px-3 py-2 my-0">
    	<small class="btn-inner--text align-middle">{{ section.settings.promotion_btn_text }}</small><span class="btn-inner--icon"><i data-feather="chevron-right" height="18" width="18" stroke-width="2" class="align-middle"></i></span>
     </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": {
    "nl": "Promotiebalk"
  },
  "class": "index-section index-section--flush index-section--usp",
  "settings": [
    {
      "type": "color",
      "id": "promotion_bg",
      "label": "Promotion Background",
      "default": "#00bcd4"
    },
    {
      "type": "text",
      "id": "promotion_text",
      "label": "Promotion Tekst",
      "info": "Voer hier je tekst in voor de promotiebalk.",
      "default": {
        "nl": "Heb je hulp nodig? Geen probleem! Bekijk onze Helpdesk."
      }
    },
    {
      "id": "promotion_btn_url",
      "type": "url",
      "label": "Promotie Button Link"
    },
    {
      "type": "text",
      "id": "promotion_btn_text",
      "label": "Promotie button tekst",
      "info": "Voer hier je tekst in voor de button in de promotiebalk.",
      "default": {
        "nl": "Meer info"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "nl": "Promotiebalk"
      },
      "category": {
        "nl": "Tekst"
      }
    }
  ]
}
{% endschema %}
