<!-- /snippets/social-sharing.liquid -->
<ul class="social-sharing list-unstyled d-flex align-items-center">
  {% if settings.share_facebook %}
    <li>
      <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="btn btn-facebook btn-sm px-2 btn--share share-facebook">
        <i class="fa fa-facebook"></i>
      </a>
    </li>
  {% endif %}

  {% if settings.share_twitter %}
    <li>
      <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="btn btn-twitter btn-sm btn--share share-twitter mx-2">
        <i class="fa fa-twitter"></i>
      </a>
    </li>
  {% endif %}

  {% if settings.share_pinterest %}
    <li>
      <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="btn btn-pinterest btn-sm btn--share share-pinterest">
        <i class="fa fa-pinterest"></i>
      </a>
    </li>
  {% endif %}
</ul>